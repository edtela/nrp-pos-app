# Server Configuration
NODE_ENV=production
PORT=3000

# ERP Integration Settings
# Set to 'true' to enable ERPNext integration
ERP_ENABLED=false

# ERPNext Connection Details
ERPNEXT_URL=https://your-instance.erpnext.com
ERPNEXT_API_KEY=your-api-key
ERPNEXT_API_SECRET=your-api-secret

# ERPNext Business Settings
ERPNEXT_COMPANY=Your Company Name
ERPNEXT_WAREHOUSE=Stores - TC
ERPNEXT_PRICE_LIST=Standard Selling

# ERP Cache Settings (in seconds)
ERP_CACHE_TTL=3600

# Admin Token for protected endpoints
ADMIN_TOKEN=your-secure-admin-token-here

# Optional: Database for persistent storage
# DATABASE_URL=postgresql://user:password@localhost:5432/nrp_pos

# Optional: Redis for caching
# REDIS_URL=redis://localhost:6379

# Optional: Logging
# LOG_LEVEL=info
# LOG_FILE=./logs/server.log